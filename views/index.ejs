                const phoneInput = document.getElementById('phoneNumber');
                const errorDiv = document.getElementById('smsError');
                const successDiv = document.getElementById('smsSuccess');
                const sendButton = document.getElementById('sendSmsButton');

                // Basic phone number validation
                const phoneNumber = phoneInput.value.trim();
                if (!phoneNumber) {
                    errorDiv.textContent = 'Please enter a phone number';
                    errorDiv.classList.remove('hidden');
                    return;
                }

                try {
                    // Disable button while sending
                    sendButton.disabled = true;
                    sendButton.textContent = 'Sending...';

                    const response = await fetch('/api/send-sms', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                        body: JSON.stringify({
                            phoneNumber,
                            tourUrl: currentTourUrl
                        })
                    });

                    const data = await response.json();

